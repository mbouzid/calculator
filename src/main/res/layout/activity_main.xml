<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:baselineAligned="true"
        android:weightSum="30"
        android:id="@+id/m_main_layout">
    
        <!-- FrameLayout used as a border -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="#ff4d00"
            android:layout_margin="5dp" 
            android:id="@+id/m_frame">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/m_display_output"
                android:background="#000000"
                android:singleLine="false"
                android:textIsSelectable="false"
                android:layout_weight="50"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="100dp">
            
            </TextView>

        </FrameLayout>
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2"
            android:shrinkColumns="3"
            android:id="@+id/m_keyboard_input"
            android:baselineAligned="true"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_weight="10"
            android:weightSum="40">
                <TableRow android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:layout_margin="2dp"
                   >
                    <Button android:id="@+id/m_seven" android:text="7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                         android:onClick="display"/>
                    <Button android:id="@+id/m_eight" android:text="8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                         android:onClick="display"/>
                    <Button android:id="@+id/m_nine" android:text="9"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                         android:onClick="display"/>
                    <Button android:id="@+id/m_all_clear" android:text="AC"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="clear"/>
                </TableRow>
                <TableRow android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:layout_margin="2dp">
                    <Button android:id="@+id/m_four" android:text="4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="display"/>
                    <Button android:id="@+id/m_five" android:text="5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="display"/>
                    <Button android:id="@+id/m_six" android:text="6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="display"/>
                    <Button android:id="@+id/m_addition" android:text="+"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="display"/>
                </TableRow>
             <TableRow android:layout_height="fill_parent"
                 android:layout_width="fill_parent"
                 android:layout_weight="10"
                 android:layout_margin="2dp">
                <Button android:id="@+id/m_one" android:text="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="display"/>
                <Button android:id="@+id/m_two" android:text="2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="display"/>
                <Button android:id="@+id/m_three" android:text="3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="display"/>
                <Button android:id="@+id/m_substraction" android:text="-"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="display"/>
            </TableRow>
            <TableRow android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:layout_margin="2dp">
                <Button android:id="@+id/m_zero" android:text="0" android:layout_span="2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="display"/>
                <Button android:id="@+id/m_decimal_point" android:text="."
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="display"/>
                <Button android:id="@+id/m_result" android:text="="
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="result"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
